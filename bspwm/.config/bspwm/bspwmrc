#! /bin/sh

### autostarting
$HOME/.config/polybar/launch.sh &
compton --backend glx &
nm-applet &
xss-lock -- i3lock &
xfce4-power-manager --daemon &
xsetroot -cursor_name left_ptr &
sxhkd &
nitrogen --restore &

# switch caps and esc key
setxkbmap -option "caps:swapescape" &

# MPD daemon start (if no other user instance exists)
[ ! -s ~/.config/mpd/pid ] && mpd &

# source the colors.
. "${HOME}/.cache/wal/colors.sh"


# Tiling Scheme
bspc config automatic_scheme spiral

# Set the border colors.
bspc config normal_border_color "$color1"
bspc config active_border_color "$color2"
bspc config focused_border_color "$color15"
bspc config presel_feedback_color "$color1"

bspc monitor -d code web music vedio files gfx games

bspc config border_width         4
bspc config window_gap           12

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config ignore_ewmh_struts   false
bspc config ignore_ewmh_focus    false

# Window Rules
bspc rule -a kitty state = floating 
bspc rule -a Dconf-editor state = floating
bspc rule -a Xdg-desktop-portal-gtk state = floating
bspc rule -a Brave state = floating
bspc rule -a Emacs desktop='^1' state = tiled
bspc rule -a Eclipse desktop='^1' state = floating
bspc rule -a Brave-browser desktop='^2' state = tiled
bspc rule -a Gnome-podcasts desktop='^2' state = floating
bspc rule -a Lollypop desktop='^3' state = floating
bspc rule -a mpv desktop='^4' state = fullscreen
bspc rule -a Org.gnome.Nautilus desktop='^5'
bspc rule -a ranger desktop='^5'
bspc rule -a Evince desktop='^5' state=pseudo_tiled
bspc rule -a libreoffice-impress desktop='^5' state = pseudo_tiled
bspc rule -a Gimp desktop='^6' state = floating
bspc rule -a Olive desktop='^6' state = floating
bspc rule -a Lutris desktop='^7' state = floating
